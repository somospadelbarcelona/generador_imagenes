rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ==========================================
    // PERMISSIVE RULES FOR DEBUG & MOCK AUTH
    // ==========================================
    // Allowing all reads and writes to ensure the app works for both 
    // real Firebase Auth users and "Local Auth" users (Admin PIN/Mock).
    // This solves the 'Permission Denied' errors in the Admin Panel.

    match /{path=**} {
      allow read, write: if true;
    }
  }
}
